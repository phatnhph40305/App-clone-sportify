<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:fontFamily="sans-serif-medium"
        android:text="Create account"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/namePromptTextView"
        android:layout_width="184dp"
        android:layout_height="32dp"
        android:layout_below="@id/createAccountTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="196dp"
        android:fontFamily="sans-serif-medium"
        android:text="What's your name?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@id/namePromptTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/bg_input"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nameInfoTextView"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="176dp"
        android:fontFamily="sans-serif-medium"
        android:text="This appears on your Spotify profile"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/termsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameInfoTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="By tapping on &quot;Create account&quot;, you agree to the Spotify Terms of Use."
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/termsOfUseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/termsTextView"
        android:layout_alignStart="@id/termsTextView"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Terms of Use"
        android:textColor="#00FFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/privacyPolicyInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/termsOfUseTextView"
        android:layout_alignStart="@id/termsTextView"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="To learn more about how Spotify collect, uses, shares and protects your personal data. Please see the Spotify Privacy Policy."
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/privacyPolicyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacyPolicyInfoTextView"
        android:layout_alignStart="@id/termsTextView"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Privacy Policy"
        android:textColor="#00FFFF"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/newsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacyPolicyTextView"
        android:layout_alignStart="@id/termsTextView"
        android:layout_marginTop="24dp"
        android:buttonTint="#FFFFFF"
        android:text="Please send me news and offers from Spotify."
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/marketingCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsCheckBox"
        android:layout_alignStart="@id/termsTextView"
        android:layout_marginTop="8dp"
        android:buttonTint="#FFFFFF"
        android:text="Share my registration data with Spotify's content providers for marketing purposes."
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createAccountButton"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marketingCheckBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/bg_rounded_btn"
        android:fontFamily="sans-serif-medium"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="32dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingBottom="12dp"
        android:text="Create an account"
        android:textColor="#000000"
        android:textSize="14sp" />

</RelativeLayout>